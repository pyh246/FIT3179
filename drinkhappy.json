{
  "$schema": "https://vega.github.io/schema/vega-lite/v4.json",
  "width": 400,
  "height": 200,
  "title": " Happiness and Alcohol Consumption per Country",
  "data": {
    "url": "https://pyh246.github.io/FIT3179/HappinessAlcoholConsumption.csv"
  },
  "params": [
    {
      "name": "Region_selection",
      "bind": {
        "input": "select",
        "options": [
          null,
          "Australia and New Zealand",
          "Central and Eastern Europe",
          "Eastern Asia",
          "Latin America and Caribbean",
          "Middle East and Northern Africa",
          "North America",
          "Southeastern Asia",
          "Sub-Saharan Africa",
          "Western Europe"
        ],
        "labels": [
          "Show All",
          "Australia and New Zealand",
          "Central and Eastern Europe",
          "Eastern Asia",
          "Latin America and Caribbean",
          "Middle East and Northern Africa",
          "North America",
          "Southeastern Asia",
          "Sub-Saharan Africa",
          "Western Europe"
        ],
        "name": "Region Selection: "
      }
    },
    {
      "name": "Wine_consumed_Above",
      "value": 0,
      "bind": {
        "input": "range",
        "min": 0,
        "max": 350,
        "step": 10,
        "name": "Minimum wine consumed: "
      }
    }
  ],
  "transform": [
    {"filter": "Region_selection == null || datum.Region == Region_selection"},
    {"filter": "datum.Wine_PerCapita > Wine_consumed_Above"}
  ],
  "encoding": {
    "x": {
      "field": "HappinessScore",
      "type": "quantitative",
      "axis": {"tickCount": 7},
      "scale": {"domain": [2, 8]},
      "title": "HappinessScore"
    },
    "y": {
      "field": "HDI",
      "axis": {"tickCount": 6},
      "type": "quantitative",
      "scale": {"domain": [400, 1000]}
    }
  },
  "layer": [
    {
      "selection": {
        "region_highlight": {
          "type": "multi",
          "fields": ["Region"],
          "bind": "legend"
        }
      },
      "mark": "circle",
      "encoding": {
        "color": {"field": "Region", "type": "nominal"},
        "opacity": {
          "condition": {"selection": "region_highlight", "value": 0.6},
          "value": 0.2
        },
        "size": {
          "field": "Wine_PerCapita",
          "type": "quantitative",
          "scale": {"type": "threshold", "domain": [10, 50, 100, 200, 300]},
          "legend": {"format": ".1s"}
        },
        "tooltip": [
          {"field": "Country", "type": "nominal"},
          {"field": "Region", "type": "nominal"},
          {"field": "Wine_PerCapita", "type": "quantitative", "format": ","},
          {"field": "HappinessScore", "type": "quantitative", "format": ","},
          {"field": "HDI", "type": "quantitative", "format": ","}
        ]
      }
    },
    {
      "mark": {
        "type": "text",
        "align": "left",
        "baseline": "middle",
        "dx": -12,
        "fontSize": 11.5,
        "fontStyle": "italic"
      },
      "encoding": {
        "text": {"field": "Country", "type": "nominal"},
        "color": {"value": "black"},
        "opacity": {
          "condition": {
            "test": "datum['Country']=='China' || datum['Country'] == 'Australia' ||  datum['Country'] == 'United States' ||  datum['Country'] == 'France'",
            "value": 1
          },
          "value": 0
        },
        "tooltip": [
          {"field": "Country", "type": "nominal"},
          {"field": "Region", "type": "nominal"},
          {"field": "Wine_PerCapita", "type": "quantitative", "format": ","},
          {"field": "HappinessScore", "type": "quantitative", "format": ","},
          {"field": "HDI", "type": "quantitative", "format": ","}
        ]
      }
    }
  ],
  "config": {}
}
