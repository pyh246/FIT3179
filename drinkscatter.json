{
  "$schema": "https://vega.github.io/schema/vega-lite/v4.json",
  "repeat": {
    "row": ["Wine_PerCapita", "HappinessScore", "Beer_PerCapita"],
    "column": ["Beer_PerCapita", "HappinessScore", "Wine_PerCapita"]
  },
  "spec": {
    "data": {
      "url": "https://pyh246.github.io/FIT3179/HappinessAlcoholConsumption.csv"
    },
  "width": 150,
  "height": 200,
    "mark": "point",
    "selection": {
      "brush": {
        "type": "interval",
        "resolve": "union",
        "on": "[mousedown[event.shiftKey], window:mouseup] > window:mousemove!",
        "translate": "[mousedown[event.shiftKey], window:mouseup] > window:mousemove!",
        "zoom": "wheel![event.shiftKey]"
      },
      "grid": {
        "type": "interval",
        "resolve": "global",
        "bind": "scales",
        "translate": "[mousedown[!event.shiftKey], window:mouseup] > window:mousemove!",
        "zoom": "wheel![!event.shiftKey]"
      }
    },
    "encoding": {
      "x": {"field": {"repeat": "column"}, "type": "quantitative"},
      "y": {
        "field": {"repeat": "row"},
        "type": "quantitative",
        "axis": {"minExtent": 30}
      },
      "color": {
        "condition": {
          "selection": "brush",
          "field": "Region",
          "type": "nominal"
        },
        "value": "grey"
      }
    }
  },
  "config": {}
}
